#!ipxe

menu
item --gap -- --------------- LIVE
item tinycore       TinyCore i386
item memtestp       Memtest86+
item dban           DBAN
item sysresccd1     SystemRescueCd x86_64
item sysresccd2     SystemRescueCd i386
item
item --gap -- --------------- INSTALL
item centos5        CentOS 5.11 x86_64
item centos6        CentOS 6.6 x86_64
item
item reboot         [Reboot]
item
item --gap    HWADDR ........ ${net0/mac} ||
item --gap    IPADDR ........ ${ip}/${netmask} ||
item --gap    GATEWAY ....... ${gateway} ||
item --gap    NAMESERVER .... ${dns} ||
choose --default reboot --timeout 60000 target && goto ${target}

:tinycore
kernel http://distro.ibiblio.org/tinycorelinux/6.x/x86/release/distribution_files/vmlinuz 
initrd http://distro.ibiblio.org/tinycorelinux/6.x/x86/release/distribution_files/core.gz
boot
# tce-load -wi kmaps.tcz
# sudo loadkmap < /usr/share/kmap/qwerty/pt-latin1.kmap

:memtestp
kernel http://techdata.mirror.gtcomm.net/pxe/sysrcd/bootdisk/memtestp
boot

:dban
kernel http://techdata.mirror.gtcomm.net/pxe/sysrcd/bootdisk/dban.bzi
boot

:sysresccd1
kernel http://techdata.mirror.gtcomm.net/pxe/sysrcd/isolinux/rescue64 scandelay=1 docache netboot=http://techdata.mirror.gtcomm.net/pxe/sysrcd/sysrcd.dat
initrd http://techdata.mirror.gtcomm.net/pxe/sysrcd/isolinux/initram.igz
boot

:sysresccd2
kernel http://techdata.mirror.gtcomm.net/pxe/sysrcd/isolinux/rescue32 scandelay=1 docache netboot=http://techdata.mirror.gtcomm.net/pxe/sysrcd/sysrcd.dat
initrd http://techdata.mirror.gtcomm.net/pxe/sysrcd/isolinux/initram.igz
boot

:centos5
kernel http://mirror.centos.org/centos-5/5.11/os/x86_64/images/pxeboot/vmlinuz ks=http://kintoandar.com/share/ks5.cfg ksdevice=bootif ip=dhcp
initrd http://mirror.centos.org/centos-5/5.11/os/x86_64/images/pxeboot/initrd.img
module https://raw.githubusercontent.com/kintoandar/rtfm/master/modules/modules.cgz /modules/modules.cgz
module https://raw.githubusercontent.com/kintoandar/rtfm/master/modules/modules.alias /modules/modules.alias
module https://raw.githubusercontent.com/kintoandar/rtfm/master/modules/module-info /modules/module-info
boot

:centos6
kernel http://mirror.centos.org/centos-6/6.6/os/x86_64/images/pxeboot/vmlinuz unsupported_hardware text NOVERIFYSSL ks=https://raw.githubusercontent.com/kintoandar/rtfm/master/kickstart/ks6_minimal.cfg ksdevice=bootif ip=dhcp
initrd http://mirror.centos.org/centos-6/6.6/os/x86_64/images/pxeboot/initrd.img
boot

:reboot
reboot
